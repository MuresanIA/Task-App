<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<fx:root type="javafx.scene.layout.BorderPane" fx:id="todoItem"
         xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="5" bottom="5" left="10" right="10"/>
    </padding>

    <left>
        <CheckBox fx:id="checkbox"/>
    </left>
    <right>
        <HBox spacing="10">
            <Button fx:id="deleteButton" styleClass="buttonTheme" text="Delete" />
            <Button fx:id="showSubtasks" styleClass="buttonTheme" text="Show subtasks"/>
        </HBox>
    </right>

</fx:root>