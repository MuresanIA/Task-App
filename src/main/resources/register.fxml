<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.MIA.controller.RegisterController"
            fx:id="registerLayout" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
    <children>
        <Label fx:id="registerText" styleClass="bigTextTheme" layoutX="222.0" layoutY="20.0" prefHeight="150.0"
               prefWidth="200.0"
               text="Register"/>
        <Label fx:id="usernameLabel" styleClass="labels" layoutX="104.0" layoutY="168.0" text="Username"/>
        <Label fx:id="passwordLabel" styleClass="labels" layoutX="104.0" layoutY="255.0" text="Password"/>
        <Label fx:id="confirmPasswordLabel" styleClass="labels" layoutX="104.0" layoutY="342.0" prefHeight="21.0"
               prefWidth="150.0"
               text="Confirm password"/>
        <Label fx:id="lblInformationRegister" layoutX="180.0" layoutY="475.0" prefHeight="21.0" prefWidth="624.0"/>
        <Label fx:id="emptyUserName" styleClass="warning" layoutX="305.0" layoutY="205.0" prefHeight="21.0"
               prefWidth="624.0"/>
        <Label fx:id="emptyPasswordRegister" styleClass="warning" layoutX="290.0" layoutY="290.0" prefHeight="21.0"
               prefWidth="624.0"/>
        <Label fx:id="emptyPasswordConfirmRegister" styleClass="warning" layoutX="290.0" layoutY="380.0"
               prefHeight="21.0" prefWidth="624.0"/>
        <Label fx:id="userNameTaken" styleClass="warning" layoutX="290.0" layoutY="205.0" prefHeight="21.0"
               prefWidth="624.0"/>
        <Label fx:id="passwordsDontMatch" styleClass="warning" layoutX="300.0" layoutY="380.0" prefHeight="21.0"
               prefWidth="624.0"/>
        <TextField fx:id="txtFieldUsernameRegister" styleClass="textFieldTheme" layoutX="282.0" layoutY="168.0"/>
        <PasswordField fx:id="pwdFieldRegister" styleClass="textFieldTheme" layoutX="282.0" layoutY="255.0"/>
        <PasswordField fx:id="pwdFieldConfirmRegister" styleClass="textFieldTheme" layoutX="285.0" layoutY="342.0"/>
        <Button fx:id="btnRegister" styleClass="buttonTheme" layoutX="220.0" layoutY="420.0" prefWidth="150"
                prefHeight="40"
                mnemonicParsing="false"
                onAction="#registerUser" text="Register"/>
        <Button fx:id="btnPreviousScene" styleClass="goBackButtonTheme" layoutX="36.0" layoutY="534.0"
                mnemonicParsing="false" prefWidth="135"
                prefHeight="32" onAction="#goBack"
                text="Go Back"/>

    </children>
</AnchorPane>