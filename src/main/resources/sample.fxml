<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.MIA.controller.Controller">
    <top>
        <MenuBar prefHeight="7.0" prefWidth="800.0" style="-fx-background-color: D3D3D3;" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="menuItemLogin" mnemonicParsing="false" onAction="#toggleLoginTab"
                                  text="Show Login"/>

                        <MenuItem fx:id="mnuItemRegister" mnemonicParsing="false" onAction="#toggleRegisterTab"
                                  text="Show Register"/>

                        <MenuItem fx:id="menuFileClose" mnemonicParsing="false" onAction="#closeApp" text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <ScrollPane fx:id="scrollPane" visible="false" vbarPolicy="ALWAYS" fitToHeight="true" fitToWidth="true"
                    prefHeight="100.0" prefWidth="100.0" prefViewportWidth="100.0" prefViewportHeight="100.0">
<!--            <ScrollBar fx:id="scrollBar"-->
        </ScrollPane>
        <AnchorPane fx:id="registerLayout" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
                    visible="false">
            <children>
                <Label layoutX="30.0" layoutY="28.0" text="Username"/>
                <Label layoutX="30.0" layoutY="64.0" text="Password"/>
                <Label layoutX="30.0" layoutY="100.0" prefHeight="21.0" prefWidth="150.0" text="Re-enter password"/>
                <TextField fx:id="txtFieldUsernameRegister" layoutX="180.0" layoutY="23.0"/>
                <Button fx:id="btnRegister" layoutX="293.0" layoutY="139.0" mnemonicParsing="false"
                        onAction="#registerUser" text="Register"/>
                <PasswordField fx:id="pwdFieldRegister" layoutX="180.0" layoutY="59.0"/>
                <PasswordField fx:id="pwdFieldConfirmRegister" layoutX="180.0" layoutY="95.0"/>
                <Label fx:id="lblInformationRegister" layoutX="14.0" layoutY="197.0" prefHeight="21.0"
                       prefWidth="624.0"/>
            </children>
        </AnchorPane>
        <AnchorPane fx:id="loginLayout" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
                    visible="false">
            <children>
                <Button fx:id="btnLogin" layoutX="343.0" layoutY="172.0" mnemonicParsing="false" onAction="#loginUser"
                        text="Login"/>
                <TextField fx:id="txtFieldUsernameLogin" layoutX="213.0" layoutY="69.0"/>
                <Label fx:id="lblUsername" layoutX="144.0" layoutY="74.0" text="Username"/>
                <Label layoutX="146.0" layoutY="124.0" text="Password"/>
                <PasswordField fx:id="pwdFieldLogin" layoutX="213.0" layoutY="119.0"/>
                <Button fx:id="btnShowPassword" layoutX="410.0" layoutY="119.0" mnemonicParsing="false"
                        onAction="#showPassword" text="Show"/>
                <TextField fx:id="txtFieldPasswordShow" layoutX="213.0" layoutY="119.0" visible="false"/>
                <Label fx:id="lblInformationLogin" layoutX="14.0" layoutY="241.0" prefHeight="21.0" prefWidth="624.0"/>
            </children>
        </AnchorPane>
        <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: D3D3D3;"
                 tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">

        </TabPane>
    </center>
</BorderPane>
